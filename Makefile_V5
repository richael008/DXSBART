MPIDIR=$(PWD)
LIBS=-lm -DARMA_DONT_USE_WRAPPER -larmadillo
CC=g++
MPICC=mpic++
MPICFLAGS=-DMPIBART
CCOPS=-Wall -g -O3 -std=c++11



bdsbart_5: bdsbart_5.o 
	$(MPICC) -o bdsbart_5 bdsbart_5.o  $(LIBS)
bdsbart_5.o: bdsbart_5.cpp
	$(MPICC) $(MPICFLAGS) $(CCOPS) -c bdsbart_5.cpp -o bdsbart_5.o

#--------------------------------------------------
clean:
	rm -f ./bdsbart_5	
	rm -f *.o



